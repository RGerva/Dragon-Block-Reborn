{
    "format_version": "1.21.90",
    "minecraft:entity": {
        "description": {
            "identifier": "dbe:training_orb",
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "dbe:color": {
                    "type": "int",
                    "range": [ 0, 2 ],
                    "default": 0,
                    "client_sync": true
                }
            }
        },

        "components": {
            "minecraft:type_family": {
                "family": [
                    "inanimate"
                ]
            },
            "minecraft:collision_box": {
                "width": 0.2,
                "height": 0.2
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "deals_damage": "no"
                }
            },
            "minecraft:physics": {
                "has_gravity": false,
                "has_collision": false
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:nameable": {
                "always_show": true
            },
            "minecraft:despawn": {
                "filters": {
                    "any_of": [
                        {
                            "test": "distance_to_nearest_player",
                            "operator": ">",
                            "value": 4
                        },
                        {
                            "test": "inactivity_timer",
                            "value": 5
                        }
                    ]
                }
            },
            "minecraft:conditional_bandwidth_optimization": {
                "default_values": {
                    "max_optimized_distance": 128,
                    "max_dropped_ticks": 20,
                    "use_motion_prediction_hints": true
                }
            },
            "minecraft:fire_immune": { }
        }
    }
}