{
    "format_version": "1.21.90",
    "minecraft:entity": {
        "description": {
            "identifier": "dbe:flying_nimbus",
            "is_spawnable": false,
            "is_summonable": true
        },

        "component_groups": {
            "dbe:flying_nimbus": {
                "minecraft:variant": {
                    "value": 0
                }
            },
            "dbe:black_flying_nimbus": {
                "minecraft:variant": {
                    "value": 1
                }
            },
            "dbe:despawn": {
                "minecraft:spawn_entity": {
                    "entities": [
                        {
                            "filters": {
                                "test": "is_variant",
                                "value": 0
                            },
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "spawn_item": "dbe:flying_nimbus",
                            "single_use": true
                        },
                        {
                            "filters": {
                                "test": "is_variant",
                                "value": 1
                            },
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "spawn_item": "dbe:black_flying_nimbus",
                            "single_use": true
                        }
                    ]
                },
                "minecraft:instant_despawn": { }
            }
        },

        "components": {
            "minecraft:type_family": {
                "family": [
                    "inanimate",
                    "flying_nimbus"
                ]
            },
            "minecraft:health": {
                "value": 1,
                "max": 1
            },
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 2.8
            },
            "minecraft:custom_hit_test": {
                "hitboxes": [
                    {
                        "width": 0.8,
                        "height": 0.6,
                        "pivot": [ 0, 0.3, 0.4 ]
                    },
                    {
                        "width": 0.8,
                        "height": 0.6,
                        "pivot": [ 0, 0.3, -0.4 ]
                    }
                ]
            },
            "minecraft:flying_speed": {
                "value": 0.14
            },
            "minecraft:rideable": {
                "seat_count": 1,
                "interact_text": "action.interact.flying_nimbus",
                "family_types": [
                    "player"
                ],
                "seats": {
                    "position": [ 0, 1, 0 ]
                }
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "on_damage": {
                        "event": "dbe:despawn"
                    },
                    "deals_damage": "no"
                }
            },
            "minecraft:ambient_sound_interval": {
                "event_name": "ambient",
                "range": 0,
                "value": 1.043
            },
            "minecraft:environment_sensor": {
                "triggers": {
                    "filters": {
                        "test": "distance_to_nearest_player",
                        "operator": ">",
                        "value": 32
                    },
                    "event": "dbe:despawn"
                }
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:input_air_controlled": { },
            "minecraft:movement.hover": { },
            "minecraft:navigation.hover": { },
            "minecraft:physics": { }
        },

        "events": {
            "dbe:black_flying_nimbus": {
                "add": {
                    "component_groups": [ "dbe:black_flying_nimbus" ]
                }
            },
            "dbe:despawn": {
                "add": {
                    "component_groups": [ "dbe:despawn" ]
                }
            }
        }
    }
}