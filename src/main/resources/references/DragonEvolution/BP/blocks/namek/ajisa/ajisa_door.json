{
	"format_version": "1.21.90",
	"minecraft:block": {
		"description": {
			"identifier": "dbe:ajisa_door",
			"states": {
				"dbe:door_hinge_bit": [ false, true ],
				"dbe:open_bit": [ false, true ],
				"dbe:upper_block_bit": [ false, true ]
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [ "minecraft:cardinal_direction" ]
				}
			}
		},
		"components": {
			"minecraft:loot": "loot_tables/blocks/ajisa_door.json",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.3
			},
			"minecraft:collision_box": {
				"origin": [ -8, 0, -8 ],
				"size": [ 16, 16, 3 ]
			},
			"minecraft:selection_box": {
				"origin": [ -8, 0, -8 ],
				"size": [ 16, 16, 3 ]
			},
			"minecraft:geometry": {
				"identifier": "geometry.door",
				"bone_visibility": {
					"open_top": "q.block_state('dbe:open_bit') && q.block_state('dbe:upper_block_bit') && !q.block_state('dbe:door_hinge_bit')",
					"open_bottom": "q.block_state('dbe:open_bit') && !q.block_state('dbe:upper_block_bit') && !q.block_state('dbe:door_hinge_bit')",
					"top": "!q.block_state('dbe:open_bit') && q.block_state('dbe:upper_block_bit') && !q.block_state('dbe:door_hinge_bit')",
					"bottom": "!q.block_state('dbe:open_bit') && !q.block_state('dbe:upper_block_bit') && !q.block_state('dbe:door_hinge_bit')",
					"reversed_open_top": "q.block_state('dbe:open_bit') && q.block_state('dbe:upper_block_bit') && q.block_state('dbe:door_hinge_bit')",
					"reversed_open_bottom": "q.block_state('dbe:open_bit') && !q.block_state('dbe:upper_block_bit') && q.block_state('dbe:door_hinge_bit')",
					"reversed_top": "!q.block_state('dbe:open_bit') && q.block_state('dbe:upper_block_bit') && q.block_state('dbe:door_hinge_bit')",
					"reversed_bottom": "!q.block_state('dbe:open_bit') && !q.block_state('dbe:upper_block_bit') && q.block_state('dbe:door_hinge_bit')"
				}
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "ajisa_door_lower",
					"render_method": "blend"
				}
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [ "up" ]
					}
				]
			},
			"minecraft:flammable": {
				"catch_chance_modifier": 5,
				"destroy_chance_modifier": 20
			},
			"minecraft:liquid_detection": {
				"detection_rules": [
					{
						"can_contain_liquid": true
					}
				]
			},
			"dbe:door": { },
			"tag:minecraft:is_axe_item_destructible": { },
			"tag:one_way_collidable": { },
			"tag:wood": { }
		},
		"permutations": [
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 180, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 90, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [ 0, 270, 0 ]
					}
				}
			},
			{
				"condition": "q.block_state('dbe:open_bit') && !q.block_state('dbe:door_hinge_bit')",
				"components": {
					"minecraft:collision_box": {
						"origin": [ -8, 0, -8 ],
						"size": [ 3, 16, 16 ]
					},
					"minecraft:selection_box": {
						"origin": [ -8, 0, -8 ],
						"size": [ 3, 16, 16 ]
					}
				}
			},
			{
				"condition": "q.block_state('dbe:open_bit') && q.block_state('dbe:door_hinge_bit')",
				"components": {
					"minecraft:collision_box": {
						"origin": [ 5, 0, -8 ],
						"size": [ 3, 16, 16 ]
					},
					"minecraft:selection_box": {
						"origin": [ 5, 0, -8 ],
						"size": [ 3, 16, 16 ]
					}
				}
			},
			{
				"condition": "q.block_state('dbe:upper_block_bit')",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "ajisa_door_upper",
							"render_method": "blend"
						}
					}
				}
			}
		]
	}
}