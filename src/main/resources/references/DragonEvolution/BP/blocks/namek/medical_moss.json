{
    "format_version": "1.21.90",
    "minecraft:block": {
        "description": {
            "identifier": "dbe:medical_moss",
            "states": {
                "dbe:growth": {
                    "values": {
                        "min": 0,
                        "max": 3
                    }
                }
            }
        },

        "components": {
            "minecraft:map_color": "#307525",
            "minecraft:loot": "loot_tables/blocks/medical_moss/medical_moss_seeds.json",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0
            },
            "minecraft:destruction_particles": {
                "texture": "medical_moss_stage_0"
            },
            "minecraft:light_dampening": 0,
            "minecraft:selection_box": {
                "origin": [ -8, 0, -8 ],
                "size": [ 16, 3, 16 ]
            },
            "minecraft:collision_box": false,
            "minecraft:geometry": "minecraft:geometry.cross",
            "minecraft:material_instances": {
                "*": {
                    "texture": "medical_moss_stage_0",
                    "render_method": "alpha_test_single_sided",
                    "ambient_occlusion": false,
                    "face_dimming": false
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "block_filter": [
                            {
                                "tags": "q.any_tag('grass')"
                            }
                        ],
                        "allowed_faces": [ "up" ]
                    }
                ]
            },
            "minecraft:flammable": {
                "catch_chance_modifier": 60,
                "destroy_chance_modifier": 100
            },
            "minecraft:liquid_detection": {
                "detection_rules": [
                    {
                        "on_liquid_touches": "popped"
                    }
                ]
            },
            "dbe:crop": {
                "max_stage": 3
            }
        },

        "permutations": [
            {
                "condition": "q.block_state('dbe:growth') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "medical_moss_stage_1",
                            "render_method": "alpha_test_single_sided",
                            "ambient_occlusion": false,
                            "face_dimming": false
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [ -8, 0, -8 ],
                        "size": [ 16, 6, 16 ]
                    }
                }
            },
            {
                "condition": "q.block_state('dbe:growth') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "medical_moss_stage_2",
                            "render_method": "alpha_test_single_sided",
                            "ambient_occlusion": false,
                            "face_dimming": false
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [ -8, 0, -8 ],
                        "size": [ 16, 9, 16 ]
                    }
                }
            },
            {
                "condition": "q.block_state('dbe:growth') == 3",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/medical_moss/medical_moss_stage_3.json",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "medical_moss_stage_3",
                            "render_method": "alpha_test_single_sided",
                            "ambient_occlusion": false,
                            "face_dimming": false
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [ -8, 0, -8 ],
                        "size": [ 16, 12, 16 ]
                    }
                }
            }
        ]
    }
}