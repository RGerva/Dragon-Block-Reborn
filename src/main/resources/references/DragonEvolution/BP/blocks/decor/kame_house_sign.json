{
    "format_version": "1.21.90",
    "minecraft:block": {
        "description": {
            "identifier": "dbe:kame_house_sign",
            "states": {
                "dbe:part": {
                    "values": {
                        "min": 0,
                        "max": 12
                    }
                }
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [ "minecraft:cardinal_direction" ]
                }
            }
        },

        "components": {
            "minecraft:map_color": "#90552b",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 5
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 5
            },
            "minecraft:destruction_particles": {
                "texture": "kame_house_sign"
            },
            "minecraft:light_dampening": 0,
            "minecraft:collision_box": false,
            "minecraft:selection_box": {
                "origin": [ -8, 0, 7 ],
                "size": [ 16, 16, 1 ]
            },
            "minecraft:geometry": {
                "identifier": "geometry.kame_house_sign",
                "bone_visibility": {
                    "part": "q.block_state('dbe:part') == 0",
                    "part1": "q.block_state('dbe:part') == 1",
                    "part2": "q.block_state('dbe:part') == 2",
                    "part3": "q.block_state('dbe:part') == 3",
                    "part4": "q.block_state('dbe:part') == 4",
                    "part5": "q.block_state('dbe:part') == 5",
                    "part6": "q.block_state('dbe:part') == 6",
                    "part7": "q.block_state('dbe:part') == 7",
                    "part8": "q.block_state('dbe:part') == 8",
                    "part9": "q.block_state('dbe:part') == 9",
                    "part10": "q.block_state('dbe:part') == 10",
                    "part11": "q.block_state('dbe:part') == 11",
                    "part12": "q.block_state('dbe:part') == 12"
                }
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "kame_house_sign",
                    "render_method": "blend",
                    "ambient_occlusion": false,
                    "face_dimming": false
                }
            },
            "dbe:change_part": { }
        },

        "permutations": [
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, -90, 0 ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 0, 0 ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 90, 0 ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 180, 0 ]
                    }
                }
            }
        ]
    }
}