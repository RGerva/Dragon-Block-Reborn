{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "identifier": "dbe:battle_jacket",
            "materials": {
                "default": "entity_alphablend",
                "outline": "outline"
            },
            "textures": {
                "default": "textures/entity/enemies/battle_jacket",
                "ki_attack": "textures/entity/ki_attack"
            },
            "geometry": {
                "default": "geometry.battle_jacket",
                "ki_manipulation": "geometry.ki_manipulation",
                "ki_manipulation_outline": "geometry.ki_manipulation_outline"
            },
            "particle_effects": {
                "beam": "dbe:beam"
            },
            "sound_effects": {
                "kamehameha_attack": "common.kamehameha_attack",
                "kamehameha_beam": "common.kamehameha_beam",
				"kienzan_loop": "skill.kienzan_loop"
            },
            "scripts": {
                "pre_animation": [
                    "v.is_attacking = v.attack_time;",
                    "v.is_idle = !q.ground_speed;",
                    "v.is_sprinting = q.property('dbe:aura_boost') && !v.is_attacking;",
                    "v.is_walking = q.ground_speed && !v.is_dashing;"
                ],
                "animate": [
                    "attack_controller",
                    "idle_controller",
                    "move_controller"
                ]
            },

            "animations": {
                "attack_controller": "controller.animation.battle_jacket.attack",
                "attack_0": "animation.battle_jacket.attack_0",
                "attack_1": "animation.battle_jacket.attack_1",
                "attack_2": "animation.battle_jacket.attack_2",
                "dash": "animation.battle_jacket.dash",
                "idle_controller": "controller.animation.battle_jacket.idle",
                "idle": "animation.battle_jacket.stand",
                "move_controller": "controller.animation.battle_jacket.move",
                "walk": "animation.battle_jacket.walk"
            },
            "render_controllers": [
                "controller.render.default",
                {
                    "controller.render.player.ki_manipulation": "v.is_loading_attack"
                },
                {
                    "controller.render.player.ki_manipulation.outline": "v.is_loading_attack"
                }
            ]
        }
    }
}