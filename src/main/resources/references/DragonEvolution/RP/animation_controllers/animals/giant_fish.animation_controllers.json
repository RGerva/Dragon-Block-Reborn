{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.giant_fish.general": {
			"initial_state": "idling",
			"states": {
				"idling": {
					"blend_transition": 0.1,
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"flopping": "!q.is_in_water && !q.is_levitating"
						},
						{
							"swimming": "q.is_moving && (q.is_in_water || q.is_levitating)"
						}
					]
				},
				"flopping": {
					"blend_transition": 0.1,
					"animations": [ "flop" ],
					"transitions": [
						{
							"swimming": "q.is_in_water || q.is_levitating"
						}
					]
				},
				"swimming": {
					"blend_transition": 0.1,
					"animations": [ "swim" ],
					"transitions": [
						{
							"idling": "!q.is_moving"
						},
						{
							"flopping": "!q.is_in_water && !q.is_levitating"
						}
					]
				}
			}
		},

		"controller.animation.giant_fish.attack": {
			"states": {
				"default": {
					"blend_transition": 0.1,
					"transitions": [
						{
							"attacking": "v.attack_time"
						}
					]
				},
				"attacking": {
					"blend_transition": 0.1,
					"animations": [ "attack" ],
					"transitions": [
						{
							"default": "q.any_animation_finished"
						}
					]
				}
			}
		}
	}
}
