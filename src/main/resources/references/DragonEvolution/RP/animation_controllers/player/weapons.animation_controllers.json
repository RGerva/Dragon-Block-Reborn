{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.player.ki_scythe": {
			"states": {
				"default": {
					"blend_transition": 0.2,
					"transitions": [
						{
							"third_person_holding": "!v.is_first_person && v.hold && q.is_item_name_any('slot.weapon.mainhand', '') && v.ki_scythe_enabled"
						}
					]
				},
				"third_person_holding": {
					"blend_transition": 0.2,
					"animations": [ "holding_ki_scythe" ],
					"transitions": [
						{
							"third_person_attack": "v.attack_time"
						},
						{
							"default": "v.is_first_person || !v.hold || !q.is_item_name_any('slot.weapon.mainhand', '') || !v.ki_scythe_enabled"
						}
					]
				},
				"third_person_attack": {
					"blend_transition": 0.5,
					"animations": [ "ki_scythe_attack" ],
					"transitions": [
						{
							"third_person_holding": "v.is_first_person || q.any_animation_finished"
						}
					]
				}
			}
		},
		"controller.animation.player.power_pole": {
			"states": {
				"default": {
					"blend_transition": 0.2,
					"transitions": [
						{
							"third_person_holding": "!v.is_first_person && v.hold && q.is_item_name_any('slot.weapon.mainhand', 'dbe:power_pole')"
						}
					]
				},
				"third_person_holding": {
					"blend_transition": 0.2,
					"animations": [ "holding_ki_scythe" ],
					"transitions": [
						// {
						// 	"third_person_attack": "v.attack_time"
						// },
						{
							"default": "v.is_first_person || !v.hold || !q.is_item_name_any('slot.weapon.mainhand', 'dbe:power_pole')"
						}
					]
				},
				"third_person_attack": {
					"blend_transition": 0.2,
					"animations": [ "ki_scythe_attack" ],
					"transitions": [
						{
							"third_person_holding": "v.is_first_person || q.any_animation_finished"
						}
					]
				},
				"third_person_jump": {
					"blend_transition": 0.2,
					"animations": [ "power_pole_jump" ],
					"transitions": [
						{
							"third_person_holding": "q.any_animation_finished"
						}
					]
				}
			}
		},
		"controller.animation.player.z_sword": {
			"states": {
				"default": {
					"blend_transition": 0.2,
					"transitions": [
						{
							"third_person_holding": "!v.is_first_person && v.hold && q.is_item_name_any('slot.weapon.mainhand', 'dbe:z_sword')"
						}
					]
				},
				"third_person_holding": {
					"blend_transition": 0.2,
					"animations": [ "holding_z_sword" ],
					"transitions": [
						{
							"default": "v.is_first_person || !v.hold || !q.is_item_name_any('slot.weapon.mainhand', 'dbe:z_sword')"
						}
					]
				}
			}
		}
	}
}