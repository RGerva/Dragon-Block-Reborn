{
    "armor_renderer": {
        "visible": false,
        "bindings": [ ]
    },

    "heart_renderer": {
        "visible": false,
        "bindings": [ ]
    },

    "hud_player_renderer": {
        "visible": false
    },

    "hud_actionbar_text": {
        "type": "image",
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "offset": [ -2, 51 ],
        "texture": "textures/empty",
        "controls": [
            {
                "actionbar_message": {
                    "type": "label",
                    "text": "$actionbar_text",
                    "text_alignment": "left",
                    "shadow": true,
                    "alpha": 0.75
                }
            }
        ]
    },

    "chat_grid_item": {
        "type": "panel",
        "size": [ "100%", "100%c" ],
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "layer": 1,
        "controls": [
            {
                "chat_background": {
                    "type": "image",
                    "texture": "textures/ui/Black",
                    "size": [ "100%", "100%c" ],
                    "anims": [ "@hud.anim_chat_bg_wait" ],
                    "alpha": 0.5,
                    "controls": [
                        {
                            "chat_text@chat_label": {
                                "anchor_from": "top_left",
                                "anchor_to": "top_left"
                            }
                        }
                    ]
                }
            }
        ]
    },

    "root_panel": {
        "modifications": [
            {
                "array_name": "controls",
                "operation": "insert_front",
                "value": [
                    {
                        "charge_bar@charge_bar.charge_bar_panel": { }
                    },
                    {
                        "crosshair@crosshair.crosshair": { }
                    },
                    {
                        "stats_bar@stats_bar.stats_bar_root": { }
                    },
                    {
                        "status_icons@status_indicator.status_indicator_panel": {
                            "anchor_from": "top_left",
                            "anchor_to": "top_left"
                        }
                    },
                    {
                        "techniques_sidebar@techniques_sidebar.techniques_sidebar_panel": { }
                    },
                    {
                        "player_position@hud.player_position": {
                            "anchor_from": "bottom_right",
                            "anchor_to": "bottom_right"
                        }
                    },
                    {
                        "custom_chat_stack": {
                            "type": "stack_panel",
                            "size": [ "40%", "0%" ],
                            "anchor_from": "bottom_left",
                            "anchor_to": "bottom_left",
                            "controls": [
                                {
                                    "chat_panel@hud.chat_panel": { }
                                }
                            ]
                        }
                    }
                    // {
                    //     "zeni_indicator@zeni_indicator.zeni_panel": { }
                    // }
                ]
            },
            {
                "control_name": "chat_stack",
                "operation": "remove"
            },
            {
                "control_name": "curor_rend",
                "operation": "remove"
            }
        ]
    }
}