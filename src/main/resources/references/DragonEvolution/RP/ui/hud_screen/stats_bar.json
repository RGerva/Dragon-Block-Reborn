{
    "namespace": "stats_bar",

    "stats_bar_root": {
        "type": "panel",
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "offset": [ 6, 6 ],
        "size": [ 192, 45 ],
        "controls": [
            {
                "yellow_stats_bar@stats_bar.stats_bar_panel": {
                    "$stats_bar_texture": "textures/ui/yellow_stats_bar",
                    "$stats_bar_color": "yellow"
                }
            },
            {
                "black_stats_bar@stats_bar.stats_bar_panel": {
                    "$stats_bar_texture": "textures/ui/black_stats_bar",
                    "$stats_bar_color": "black"
                }
            }
        ]
    },

    "stats_bar_panel": {
        "type": "panel",
        "controls": [
            {
                "stats_bar_image": {
                    "type": "image",
                    "texture": "$stats_bar_texture",
                    "$condition": "('stats_bar_color:' + $stats_bar_color)",
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not((#hud_title_text_string - $condition) = #hud_title_text_string))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "health_bar@stats_bar.health_bar_panel": { }
            },
            {
                "blue_ki_bar@stats_bar.ki_bar_panel": {
                    "$bar_texture": "textures/ui/ki_bars/blue_ki_bar",
                    "$ki_bar_color": "blue"
                }
            },
            {
                "green_ki_bar@stats_bar.ki_bar_panel": {
                    "$bar_texture": "textures/ui/ki_bars/green_ki_bar",
                    "$ki_bar_color": "green"
                }
            },
            {
                "purple_ki_bar@stats_bar.ki_bar_panel": {
                    "$bar_texture": "textures/ui/ki_bars/purple_ki_bar",
                    "$ki_bar_color": "purple"
                }
            },
            {
                "yellow_ki_bar@stats_bar.ki_bar_panel": {
                    "$bar_texture": "textures/ui/ki_bars/yellow_ki_bar",
                    "$ki_bar_color": "yellow"
                }
            },
            {
                "white_ki_bar@stats_bar.ki_bar_panel": {
                    "$bar_texture": "textures/ui/ki_bars/white_ki_bar",
                    "$ki_bar_color": "white"
                }
            }
        ]
    },

    "health_bar_panel": {
        "type": "panel",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "offset": [ -1, 13 ],
        "size": [ 150, 7 ],
        "layer": 1,
        "controls": [
            {
                "health_bar_image@common_bar.bar_panel": {
                    "$bar_prefix": "health_bar_frame:",
                    "$bar_texture": "textures/ui/health_bar"
                }
            },
            {
                "health_bar_label@stats_bar.bar_label": {
                    "$subtitle_prefix": "health_bar_value:"
                }
            }
        ]
    },

    "ki_bar_panel": {
        "type": "panel",
        "anchor_from": "bottom_right",
        "anchor_to": "bottom_right",
        "offset": [ -51, -13 ],
        "size": [ 100, 7 ],
        "layer": 1,
        "$ki_bar_color|default": "",
        "controls": [
            {
                "ki_bar_image@common_bar.bar_panel": {
                    "$bar_prefix": "ki_bar_frame:",
                    "$bar_uv_size": [ 100, 7 ],
                    "$bar_uv": "@stats_bar.ki_bar_flip_book_animation",
                    "$condition": "('ki_bar_color:' + $ki_bar_color)",
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not((#hud_title_text_string - $condition) = #hud_title_text_string))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "ki_bar_label@stats_bar.bar_label": {
                    "$subtitle_prefix": "ki_bar_value:"
                }
            }
        ]
    },

    "ki_bar_flip_book_animation": {
        "anim_type": "flip_book",
        "initial_uv": [ 0, 0 ],
        "frame_count": 9,
        "fps": 24
    },

    "bar_label@templates.subtitle_label": {
        "anchor_from": "left_middle",
        "anchor_to": "left_middle",
        "offset": [ 5, 0 ],
        "font_type": "MinecraftTen",
        "font_scale_factor": 0.8,
        "shadow": true,
        "alpha": 0.8,
        "layer": 1
    }
}