{
    "namespace": "custom_server_form",

    "background": {
        "type": "image",
        "texture": "$background_texture",
        "$background_texture|default": "textures/ui/backgrounds/blue"
    },

    "button@common_buttons.light_text_button": {
        "size": [ "100%", "20px" ],
        "anchor_from": "top_left",
        "anchor_to": "top_left",
        "$pressed_button_name": "button.form_button_click",
        "$button_type_panel": "common.empty_panel",
        "$border_visible": false,
        "bindings": [
            {
                "binding_type": "collection_details",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not ((#form_button_text = '') or (#form_button_text = 'ui.dbe.backButton')))",
                "target_property_name": "#visible"
            }
        ]
    },

    "text_button@custom_server_form.button": {
        "$button_type_panel": "custom_server_form.button_label",
        "bindings": [
            {
                "binding_type": "collection_details",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not ((#form_button_text = '') or (#form_button_text = 'ui.dbe.backButton')))",
                "target_property_name": "#visible"
            }
        ]
    },

    "button_label": {
        "type": "label",
        "size": [ "100%", "100%" ],
        "text": "#form_button_text",
        "color": "black",
        "text_alignment": "$button_label_text_alignment",
        "$button_label_text_alignment|default": "center",
        "bindings": [
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            }
        ]
    },

    "back_button": {
        "type": "stack_panel",
        "offset": [ -6, 0 ],
        "size": [ 24, 22 ],
        "anchor_from": "top_left",
        "anchor_to": "top_right",
        "collection_name": "form_buttons",
        "controls": [
            {
                "button@custom_server_form.button": {
                    "$default_button_texture": "textures/ui/buttons/back_button",
                    "$hover_button_texture": "textures/ui/buttons/back_button_hover",
                    "collection_index": 0,
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "form_buttons"
                        },
                        {
                            "binding_name": "#form_button_text",
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#form_button_text = 'ui.dbe.backButton')",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            }
        ]
    },

    "big_next_button@custom_server_form.button": {
        "$default_button_texture": "textures/ui/buttons/big_next_button",
        "$hover_button_texture": "textures/ui/buttons/big_next_button_hover"
    },

    "big_previous_button@custom_server_form.button": {
        "$default_button_texture": "textures/ui/buttons/big_previous_button",
        "$hover_button_texture": "textures/ui/buttons/big_previous_button_hover"
    }
}