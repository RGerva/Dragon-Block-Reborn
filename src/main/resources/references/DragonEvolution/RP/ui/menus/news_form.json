{
    "namespace": "news_form",

    "news_form@server_form.long_form": {
        "size": [ 275, 175 ],
        "$child_control": "news_form.news_scrolling_panel",
        "$custom_background": "custom_server_form.background",
        "$background_texture": "textures/ui/backgrounds/yellow",
        "$default_button_texture": "textures/ui/buttons/blue_button",
        "$hover_button_texture": "textures/ui/buttons/blue_button_hover"
    },

    "news_scrolling_panel": {
        "type": "panel",
        "controls": [
            {
                "fixed_menu_buttons@menu_form.fixed_menu_buttons": { }
            },
            {
                "scrolling_panel@common.scrolling_panel": {
                    "anchor_to": "top_left",
                    "anchor_from": "top_left",
                    "size": [ "100%", "100%" ],
                    "$show_background": false,
                    "$scrolling_content": "news_form.news_scrolling_content",
                    "$scroll_size": [ 5, "100% - 4px" ],
                    "$scrolling_pane_size": [ "100% - 4px", "100% - 2px" ],
                    "$scrolling_pane_offset": [ 2, 0 ],
                    "$scroll_bar_right_padding_size": [ 0, 0 ]
                }
            }
        ]
    },

    "news_scrolling_content": {
        "type": "stack_panel",
        "size": [ "100% - 4px", "100%c" ],
        "layer": 1,
        "controls": [
            {
                "description_panel": {
                    "type": "panel",
                    "size": [ "100%", "100%c" ],
                    "anchor_to": "top_left",
                    "anchor_from": "top_left",
                    "controls": [
                        {
                            "description_label": {
                                "type": "label",
                                "size": [ "100%", "default" ],
                                "text": "#form_text",
                                "color": "black"
                            }
                        }
                    ]
                }
            },
            {
                "image_panel": {
                    "type": "panel",
                    "size": [ "100%", "66px" ],
                    "anchor_to": "center",
                    "anchor_from": "center",
                    "controls": [
                        {
                            "image": {
                                "type": "image",
                                "texture": "textures/ui/vip"
                            }
                        }
                    ]
                }
            }
        ]
    }
}