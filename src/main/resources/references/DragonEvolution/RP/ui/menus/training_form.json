{
    "namespace": "training_form",

    "training_form@server_form.long_form": {
        "size": [ 275, 175 ],
        "$child_control": "training_form.training_scrolling_panel",
        "$custom_background": "custom_server_form.background",
        "$default_button_texture": "textures/ui/buttons/blue_button",
        "$hover_button_texture": "textures/ui/buttons/blue_button_hover"
    },

    "training_scrolling_panel": {
        "type": "panel",
        "controls": [
            {
                "fixed_menu_buttons@menu_form.fixed_menu_buttons": { }
            },
            {
                "scrolling_panel@common.scrolling_panel": {
                    "anchor_to": "top_left",
                    "anchor_from": "top_left",
                    "size": [ "100%", "100%" ],
                    "$show_background": false,
                    "$scrolling_content": "training_form.training_scrolling_content",
                    "$scroll_size": [ 5, "100% - 4px" ],
                    "$scrolling_pane_size": [ "100% - 4px", "100% - 2px" ],
                    "$scrolling_pane_offset": [ 2, 0 ],
                    "$scroll_bar_right_padding_size": [ 0, 0 ]
                }
            }
        ]
    },

    "training_scrolling_content": {
        "type": "panel",
        "size": [ "100% - 4px", "100%c" ],
        "layer": 1,
        "controls": [
            {
                "buttons_panel": {
                    "type": "stack_panel",
                    "anchor_from": "top_right",
                    "anchor_to": "top_right",
                    "factory": {
                        "name": "buttons",
                        "control_name": "custom_server_form.text_button"
                    },
                    "collection_name": "form_buttons",
                    "$button_label_text_alignment": "left_middle",
                    "bindings": [
                        {
                            "binding_name": "#form_button_length",
                            "binding_name_override": "#collection_length"
                        }
                    ]
                }
            }
        ]
    }
}