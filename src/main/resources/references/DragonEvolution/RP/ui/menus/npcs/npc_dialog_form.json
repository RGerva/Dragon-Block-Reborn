{
    "namespace": "npc_dialog_form",

    "npc_dialog_form": {
        "type": "panel",
        "controls": [
            {
                "background": {
                    "size": [ "100%", "100%" ],
                    "type": "image",
                    "texture": "textures/ui/backgrounds/black",
                    "alpha": 0.75
                }
            },
            {
                "form@server_form.long_form": {
                    "anchor_to": "bottom_middle",
                    "anchor_from": "bottom_middle",
                    "size": [ 275, 115 ],
                    "offset": [ 0, -10 ],
                    "$child_control": "npc_dialog_form.npc_dialog_scrolling_panel",
                    "$custom_background": "custom_server_form.background",
                    "$background_texture": "textures/ui/backgrounds/yellow",
                    "$default_button_texture": "textures/ui/buttons/blue_button",
                    "$hover_button_texture": "textures/ui/buttons/blue_button_hover"
                }
            }
        ]
    },

    "npc_dialog_scrolling_panel": {
        "type": "panel",
        "layer": 1,
        "controls": [
            {
                "back_button@custom_server_form.back_button": { }
            },
            {
                "scrolling_panel@common.scrolling_panel": {
                    "anchor_to": "top_middle",
                    "anchor_from": "top_middle",
                    "size": [ "100%", "60%" ],
                    "$show_background": false,
                    "$scrolling_content": "npc_dialog_form.npc_dialog_form_scrolling_content",
                    "$scroll_size": [ 5, "100% - 4px" ],
                    "$scrolling_pane_size": [ "100% - 4px", "100% - 2px" ],
                    "$scrolling_pane_offset": [ 2, 0 ],
                    "$scroll_bar_right_padding_size": [ 0, 0 ]
                }
            },
            {
                "buttons_panel": {
                    "type": "stack_panel",
                    "size": [ "25%", 30 ],
                    "anchor_from": "bottom_left",
                    "anchor_to": "bottom_left",
                    "collection_name": "form_buttons",
                    "orientation": "horizontal",
                    "factory": {
                        "name": "buttons",
                        "control_name": "custom_server_form.text_button"
                    },
                    "bindings": [
                        {
                            "binding_name": "#form_button_length",
                            "binding_name_override": "#collection_length"
                        }
                    ]
                }
            }
        ]
    },

    "npc_dialog_form_scrolling_content": {
        "type": "panel",
        "size": [ "100% - 4px", "100%c" ],
        "controls": [
            {
                "description_panel": {
                    "type": "panel",
                    "size": [ "100%", "100%c" ],
                    "controls": [
                        {
                            "description_label": {
                                "type": "label",
                                "size": [ "100%", "default" ],
                                "anchor_from": "right_middle",
                                "anchor_to": "right_middle",
                                "text": "#form_text",
                                "color": "black"
                            }
                        }
                    ]
                }
            }
        ]
    }
}