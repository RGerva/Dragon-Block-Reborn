{
    "namespace": "alignment_question_form",

    "alignment_question_form@server_form.long_form": {
        "size": [ 275, 175 ],
        "$child_control": "alignment_question_form.alignment_question_panel",
        "$custom_background": "custom_server_form.background",
        "$default_button_texture": "textures/ui/buttons/blue_button",
        "$hover_button_texture": "textures/ui/buttons/blue_button_hover"
    },

    "alignment_question_panel": {
        "type": "panel",
        "layer": 1,
        "controls": [
            {
                "back_button@custom_server_form.back_button": { }
            },
            {
                "description": {
                    "type": "label",
                    "size": [ "100%", "100%" ],
                    "anchor_from": "right_middle",
                    "anchor_to": "right_middle",
                    "text": "#form_text",
                    "text_alignment": "center",
                    "color": "black",
                    "shadow": false
                }
            },
            {
                "buttons_panel": {
                    "type": "stack_panel",
                    "size": [ "50%", "100%c" ],
                    "anchor_from": "bottom_middle",
                    "anchor_to": "bottom_middle",
                    "collection_name": "form_buttons",
                    "controls": [
                        {
                            "button@custom_server_form.text_button": {
                                "collection_index": 1
                            }
                        },
                        {
                            "button@custom_server_form.text_button": {
                                "collection_index": 2
                            }
                        },
                        {
                            "button@custom_server_form.text_button": {
                                "collection_index": 3
                            }
                        }
                    ]
                }
            }
        ]
    }
}