{
    "format_version": "1.21.90",
    "minecraft:attachable": {
        "description": {
            "identifier": "dbe:dragon_radar",
            "materials": {
                "default": "entity_alphatest"
            },
            "textures": {
                "dragon_radar_0": "textures/models/dragon_radar/dragon_radar_0",
                "dragon_radar_1": "textures/models/dragon_radar/dragon_radar_1",
                "dragon_radar_2": "textures/models/dragon_radar/dragon_radar_2",
                "dragon_radar_3": "textures/models/dragon_radar/dragon_radar_3"
            },
            "geometry": {
                "default": "geometry.dragon_radar"
            },
            "sound_effects": {
                "beep": "item.dragon_radar.beep"
            },
            "scripts": {
                "initialize": [
                    "v.dragon_ball_position_x = 0.0;",
                    "v.dragon_ball_position_z = 0.0;"
                ],
                "pre_animation": [
                    "v.dragon_ball_position_x = q.property('dbe:dragon_radar_x') * 4 / 64;",
                    "v.dragon_ball_position_z = q.property('dbe:dragon_radar_z') * 4 / 64;"
                ],
                "animate": [
                    "holding",
                    {
                        "scanning": "c.is_first_person && (v.dragon_ball_position_x != 0 || v.dragon_ball_position_z != 0)"
                    }
                ]
            },
            "animations": {
                "holding": "animation.dragon_radar.holding",
                "scanning": "animation.dragon_radar.scanning"
            },
            "render_controllers": [
                {
                    "controller.render.dragon_radar": "c.is_first_person"
                }
            ]
        }
    }
}