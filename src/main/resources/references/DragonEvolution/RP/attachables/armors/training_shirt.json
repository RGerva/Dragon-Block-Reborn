{
    "format_version": "1.21.90",
    "minecraft:attachable": {
        "description": {
            "identifier": "dbe:training_shirt",
            "materials": {
                "default": "armor",
                "enchanted": "armor_enchanted"
            },
            "textures": {
                "default": "textures/models/armor/training_shirt",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.clothes"
            },
            "render_controllers": [
                {
                    "controller.render.custom_armor": "q.is_item_name_any('slot.weapon.offhand', 1, 'dbe:training_shirt') && !c.is_first_person"
                }
            ]
        }
    }
}