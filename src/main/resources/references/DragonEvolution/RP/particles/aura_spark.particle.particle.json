{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "dbe:aura_spark",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/lightning"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.rotation = math.random(0, 360);v.amount = math.random(1, 4);v.size = math.random(0.3, 0.4);"
			},
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": true,
				"velocity": true
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": "v.amount"
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 1
			},
			"minecraft:emitter_shape_box": {
				"offset": [ 0, 1.25, 0 ],
				"half_dimensions": [ 0.75, 1.25, 0.75 ],
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.3
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random(0, 360)"
			},
			"minecraft:particle_initial_speed": 0.1,
			"minecraft:particle_motion_dynamic": { },
			"minecraft:particle_motion_parametric": {
				"rotation": "v.rotation"
			},
			"minecraft:particle_appearance_billboard": {
				"size": [ "v.size", "v.size" ],
				"facing_camera_mode": "direction_z",
				"uv": {
					"texture_width": 32,
					"texture_height": 128,
					"flipbook": {
						"base_UV": [ 0, 0 ],
						"size_UV": [ 32, 32 ],
						"step_UV": [ 0, 32 ],
						"max_frame": 4,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00FFFFFF",
						"0.5": "#ffffffff",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}